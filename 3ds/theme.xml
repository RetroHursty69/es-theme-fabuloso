<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

<!--
This entry makes the wheel art appear on main menu
--> 

	<view name="system">
		<image name="logo">
			<path>./_inc/system.png</path>
		</image>
	</view>
	
<!--
This entry positions the system.pmg image on the system views
--> 	
	
  	<view name="detailed, video, basic">
                <image name="system" extra="true">
                   <pos>0.056 0.023</pos>
                   <maxSize>0.32 0.25</maxSize>
                   <path>./_inc/system.png</path>
                   <zIndex>3</zIndex>            
                </image>
	</view>			
</theme>
