<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.0 -0.11</pos>
        <logoAlignment>center</logoAlignment>         
        <size>1 1.21</size>
        <logoScale>1.2</logoScale>
        <zIndex>3</zIndex>          
        <logoSize>0.25 0.25</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>    
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main_bottom.png</path>
      </image>
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>4</zIndex>                 
         <path>./_inc/images/main_top.png</path>
      </image>                      
      <text name="systemInfo">     
         <pos>0.25 0.9</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>4278EC</color>
         <fontPath>./_inc/fonts/GROBOLD.ttf</fontPath>
	     <fontSize>0.022</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>


